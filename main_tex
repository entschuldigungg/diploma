\newpage
\begin{center}
\section*{ПРИЛОЖЕНИЕ А}\addcontentsline{toc}{section}{\hspace{0mm}ПРИЛОЖЕНИЕ А}
\end{center}

\noindent
1. Получение уравнений динамики с помощью подхода Гейзенберга


\noindent
Гамильтониан системы:
\begin{eqnarray}\label{total} 
\begin{gathered}
H=-\sum \left[J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)(e_j^{\dag}e_j-g_j^{\dag}g_j)\right]-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)}+\\+\omega_{a}a^{\dag}a-\frac{\chi}{\sqrt{N}}\sum(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia),
\end{gathered}
\end{eqnarray}
1.1 Для оператора фотонного поля: $i\dot{a}=[a,H]=aH-Ha$:
\begin{equation}
\begin{gathered}
\left[a,-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)(e_j^{\dag}e_j-g_j^{\dag}g_j)}\right]=a(-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)(e_j^{\dag}e_j-g_j^{\dag}g_j)})-\\-(-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)(e_j^{\dag}e_j-g_j^{\dag}g_j)})a=0,
\end{gathered}
\end{equation}
\begin{equation}
\begin{gathered}
\left[a,-\frac{1}{2} h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)}\right]=a(-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)})-\\
-(-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)})a=0,
\end{gathered}
\end{equation}
\begin{equation}
\begin{gathered}
\left[a,\omega_{a}a^{\dag}a\right]=a\omega_{a}a^{\dag}a-\omega_{a}a^{\dag}aa=\omega_{a}aa^{\dag}a-\omega_{a}a^{\dag}aa=\omega_{a}(aa^{\dag}-a^{\dag}a)a=\omega_{a}a,
\end{gathered}
\end{equation}
\begin{equation}
\begin{gathered}
\left[a,-\frac{\chi}{\sqrt{N}}\sum{a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia}\right]
=a(-\frac{\chi}{\sqrt{N}}\sum{a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia})-\\-(-\frac{\chi}{\sqrt{N}}\sum{a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia})a
=-\frac{\chi}{\sqrt{N}}\sum {a(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia)}-\\-(-\frac{\chi}{\sqrt{N}}\sum{a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia})a
=-\frac{\chi}{\sqrt{N}}\sum{aa^{\dag}g_i^{\dag}e_i+ae_i^{\dag}g_ia-a^{\dag}g_i^{\dag}e_ia-e_i^{\dag}g_iaa}=\\
=-\frac{\chi}{\sqrt{N}}\sum{(aa^{\dag}g_i^{\dag}e_i-a^{\dag}g_i^{\dag}e_ia)+(ae_i^{\dag}g_ia-e_i^{\dag}g_iaa)}=\\
=-\frac{\chi}{\sqrt{N}}\sum{g_i^{\dag}e_i(aa^{\dag}-a^{\dag}a)}
=-\frac{\chi}{\sqrt{N}}\sum{g_i^{\dag}e_i}.
\end{gathered}
\end{equation}

\noindent
При $p_i=g_i^{\dag}e_i$ выражение (31) примет вид:
$-\frac{\chi}{\sqrt{N}}\sum {p_i}$.

\noindent
1.2 Для оператора поляризации: $i\dot{p_i}=[p_i,H]=p_iH-Hp_i$

\noindent
Для первого слагаемого Гамильтониана имеем:\\ 
$\left[p_i,-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)(e_j^{\dag}e_j-g_j^{\dag}g_j)}\right]$.

\noindent
Используя правило Лейбница: $\left[\hat{A},\hat{B}\hat{C}\right]=\left[\hat{A},\hat{B}\right]\hat{C}+\left\hat{B}[\hat{A},\hat{C}\right]$, пусть $\hat{A}=p_i$,  $\hat{B}=-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)}$, $\hat{C}=-(e_j^{\dag}e_j-g_j^{\dag}g_j)$, получаем:

\begin{equation}
\begin{gathered}
\left[p_i,-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)}\right](e_j^{\dag}e_j-g_j^{\dag}g_j)+\\
+(-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)})\left[p_i,(e_j^{\dag}e_j-g_j^{\dag}g_j)\right].
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
-\sum{J_{ij}}\Bigg(\left[p_i,(e_i^{\dag}e_i-g_i^{\dag}g_i)\right](e_j^{\dag}e_j-g_j^{\dag}g_j)+(e_i^{\dag}e_i-g_i^{\dag}g_i)\left[p_i,(e_j^{\dag}e_j-g_j^{\dag}g_j)\right]\Bigg)=\\
=-\sum{J_{ij}}(2p_i(e_j^{\dag}e_j-g_j^{\dag}g_j)).
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
\left[p_i,-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)}\right]=\\
=p_i(-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)})-(-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)})p_i=\\
=-\frac{1}{2}h\sum{(g_i^{\dag}e_ie_i^{\dag}e_i-g_i^{\dag}e_ig_i^{\dag}g_i)-\\
-e_i^{\dag}e_ig_i^{\dag}e_i+g_i^{\dag}g_ig_i^{\dag}e_i}=-\frac{1}{2}h\sum{p_i}=-h\sum{p_i}.
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
\left[p_i,\omega_{a}a^{\dag}a\right]=(p_i\omega_{a}a^{\dag}a-\omega_{a}a^{\dag}ap_i)=0.
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
\left[p_i,-\frac{\chi}{\sqrt{N}}\sum(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia)\right]=(p_i(-\frac{\chi}{\sqrt{N}}\sum(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia)))-\\
-(-\frac{\chi}{\sqrt{N}}\sum(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia)p_i)=\frac{\chi}{\sqrt{N}}\sum{a(e_i^{\dag}e_i-g_i^{\dag}g_i)}.

\end{gathered}
\end{equation}
\noindent
Пусть $S_{z,i}=e_i^{\dag}e_i-g_i^{\dag}g_i$, тогда выражение (36) примет вид:
$-\frac{\chi}{\sqrt{N}}\sum{aS_{z,i}}$.

\noindent
1.3 Для оператора инверсии населённостей: $i\dot{S_{z,i}}=[S_{z,i},H]=S_{z,i}H-HS_{z,i}$.

\noindent
Для первого слагаемого Гамильтониана имеем:\\ 
$\left[S_{z,i},-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)(e_j^{\dag}e_j-g_j^{\dag}g_j)}\right]$.

\noindent
Используя правило Лейбница: $\left[\hat{A},\hat{B}\hat{C}\right]=\left[\hat{A},\hat{B}\right]\hat{C}+\left\hat{B}[\hat{A},\hat{C}\right]$, пусть $\hat{A}=S_{z,i}$, $\hat{B}=-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)}$, $\hat{C}=-(e_j^{\dag}e_j-g_j^{\dag}g_j)$, получаем:

\begin{equation}
\begin{gathered}
\left[S_{z,i},-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)}\right](e_j^{\dag}e_j-g_j^{\dag}g_j)+\\
+(-\sum{J_{ij}(e_i^{\dag}e_i-g_i^{\dag}g_i)})\left[S_{z,i},(e_j^{\dag}e_j-g_j^{\dag}g_j)\right]=0.
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
\left[S_{z,i},-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)}\right]=(S_{z,i}(-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)})-\\
-(-\frac{1}{2}h\sum{(e_i^{\dag}e_i-g_i^{\dag}g_i)})S_{z,i})=0.
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
\left[S_{z,i},\omega_{a}a^{\dag}a\right]=S_{z,i}\omega_{a}a^{\dag}a-\omega_{a}a^{\dag}aS_{z,i}=0.
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
\left[S_{z,i},-\frac{\chi}{\sqrt{N}}\sum(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia)\right]=S_{z,i}(-\frac{\chi}{\sqrt{N}}\sum(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia))-\\
-(-\frac{\chi}{\sqrt{N}}\sum(a^{\dag}g_i^{\dag}e_i+e_i^{\dag}g_ia))S_{z,i}=-\frac{2\chi}{\sqrt{N}}\sum(ap_i^{\dag}-a^{\dag}p_i).
\end{gathered}
\end{equation}
\noindent
2. Получение интеграла движения исходя из уравнений динамики.

\begin{subequations}\label{syst2}
\begin{align}
\begin{split}
i\dot{a}=\Omega_{a}a-\frac{\chi}{\sqrt{N}}\sum{p_i},
\end{split} \label{f2}\\
\begin{split}
i\dot{p_i}=-2p_i\sum{J_{ij}S_{z,j}}-Hp_i+\frac{\chi}{\sqrt{N}}aS_{zi},
\end{split}\label{p2}\\
\begin{split}
i\dot{S_{zi}}=i\gamma_{\parallel}(S_{z,0}-S_{z,i})- \frac{2\chi}{\sqrt{N}}(ap_i^{\dag}-a^{\dag}p_i).
\end{split}
\end{align}
\end{subequations}
\noindent
Выражая $a$ из (41b):
\begin{equation}
\begin{gathered}
a=\frac{(i\frac{d}{dt}+2\sum{J_{ij}S_{z,j}}+H)p_i\sqrt{N}}{\chi S_{z,i}}.
\end{gathered}
\end{equation}
Подставляя полученное выражение в (41c):
\begin{equation}
\begin{gathered}
i\dot{S_{zi}}=i\gamma_{\parallel}(S_{z,0}-S_{z,i})- \frac{2\chi}{\sqrt{N}}((\frac{(i\frac{d}{dt}+2\sum{J_{ij}S_{z,j}}+H)p_i\sqrt{N}}{\chi S_{z,i}})p_i^{\dag}-\\
-\frac{(-i\frac{d}{dt}+2\sum{J_{ij}S_{z,j}}+H^{\dag})p_i^{\dag}\sqrt{N}}{\chi S_{z,i}}p_i).
\end{gathered}
\end{equation}

\begin{equation}
\begin{gathered}
\frac{d}{dt}(S_{z,i}^2+4|p_i|^2)=2\gamma_{\parallel}(\frac{\gamma_{\parallel}}{\gamma_{\perp}}S_{z,i}(S_{z,0}-S_{z,i})-4|p_i|^2.
\end{gathered}
\end{equation}
\noindent
Таким образом, интеграл движения: $S_{z,i}^2+4|p_i|^2=const$.

\noindent
3. Получение системы уравнений на параметры порядка для изолированной системы.

\noindent
Наличие связи между поляризацией и инверсией населенности делает возможным получение решения для системы в стационарном состоянии. Для этого решение для поляризации и фотонного поля представлено в виде: $a=ae^{-i{\mu}t}$ и $p_i=p_ie^{-i{\mu}t}$.
Подставляя решения в (41а), получаем:
\begin{equation}
\begin{gathered}
a=\frac{\chi\sum{p_i}}{\sqrt{N}\omega_a}.
\end{gathered}
\end{equation}
Подставляя решения в (41b), получаем:
\begin{equation}
\begin{gathered}
p_i=\frac{\lambda\chi S_{z,i}}{2\sum{J_{ij}S_{zj}}+h}.
\end{gathered}
\end{equation}
Так как $S_{z,i}^2=1-4|p_i|^2$, тогда:
\begin{equation}
\begin{gathered}
p_i=\frac{\chi\lambda}{\sqrt{((2\sum{J_{ij}S_{zj}}+h)^2+4\chi^2\lambda^2}}
\end{gathered}
\end{equation}
Так как $\lambda=\frac{\chi\sum{p_i}}{N\omega_a}$, то:
\begin{equation}
\begin{gathered}
\omega_a\lambda=(\frac{\chi}{N})(\frac{\chi\lambda}{\sqrt{((2\sum{J_{ij}S_{zj}}+h)^2+4\chi^2\lambda^2}}).
\end{gathered}
\end{equation}
\noindent
Из (46) выражаем $S_{z,i}$:
\begin{equation}
\begin{gathered}
S_{z,i}=\frac{(2\sum{J_{ij}S_{zj}}+h))p_i}{\chi\lambda}.
\end{gathered}
\end{equation}
\noindent
При $\sum{J_{ij}S_{z,j}}=2Jk_iS_z$ и $S_z=\frac{1}{N<k>}\sum{k_jS_{z,j}}$ имеем:
\begin{equation}
\begin{gathered}
S_z=\frac{1}{N<k>}\sum{k_i\frac{p_i(4\sum{J_{ij}S_{zj}}+h)}{\chi\lambda}}.
\end{gathered}
\end{equation}
\noindent
Исходя из (47), получаем:
\begin{equation}
\begin{gathered}
S_z=\frac{1}{N<k>}\sum{\frac{k_i(h+4Jk_iS_z)}{\sqrt{(4Jk_iS_z+h)^2+4\lambda^2}}}.
\end{gathered}
\end{equation}
\noindent
Получены следующие выражения для параметров порядка системы, представляющие коллективно взвешенную инверсию населенности \\ $S_z=\frac{1}{N<k>}\sum{k_jS_{z,j}}$ и среднюю амплитуду фотонного поля $\lambda=\frac{a}{\sqrt{N}}$. Также для удобства в данной системе были введены следующие безразмерные величины: $J=J/\chi$, $h=h/\chi$, $\omega_{a}=\omega_{a}/\chi$.
\begin{subequations}\label{syst_solve}
\begin{align}
\begin{split}
\omega_{a}\lambda=\frac{\lambda}{N}\sum{\frac{1}{\sqrt{(4Jk_iS_z+h)^2+4\lambda^2}}},
\end{split} \label{fsol}\\
\begin{split}
S_z=\frac{1}{N<k>}\sum{\frac{k_i(h+4Jk_iS_z)}{\sqrt{(4Jk_iS_z+h)^2+4\lambda^2}}}.
\end{split}\label{psol}
\end{align}
\end{subequations}


